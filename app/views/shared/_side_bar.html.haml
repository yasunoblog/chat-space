.side-bar
  .side-header
    .side-header__box
      %h3.header__name
        = current_user.name
      %ul.header__lists
        %li.list
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'fas-fa-pen-square'
        %li.list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'fas fa-cog'
            
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            message